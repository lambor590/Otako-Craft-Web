---
import { ClientRouter } from "astro:transitions";
import NavLink from "@components/NavLink.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web de Otako Land" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Página web de Otako Land, un servidor de Discord" />
    <meta name="og:title" content={title} />
    <meta name="og:description" content="Página web de Otako Land, un servidor de Discord" />
    <link rel="icon" type="image/svg+xml" href="/logo.webp" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen bg-gray-900 text-gray-100">
    <header
      class="px-4 sm:px-6 lg:px-8 h-16 flex items-center bg-gray-800/95 backdrop-blur-sm sticky top-0 z-50 border-b border-gray-700/50"
    >
      <a
        href="/"
        class="flex items-center justify-center group transition-transform hover:scale-105"
      >
        <img
          src="/logo.webp"
          class="w-10 h-10 sm:w-12 sm:h-12 rounded-full shadow-lg shadow-purple-500/20"
        />
        <span
          class="hidden sm:block ml-2 sm:ml-3 text-xl sm:text-2xl font-extrabold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent"
        >
          Otako Land
        </span>
      </a>
      <nav class="ml-auto flex gap-3 sm:gap-6">
        <NavLink link="/minecraft" text="Minecraft" />
        <NavLink link="/kaizen" text="Kaizen" />
        <NavLink link="/discord" text="Discord" />
      </nav>
    </header>
    <main class="flex-1 bg-gray-900">
      <slot />
    </main>
    <footer
      class="flex flex-col gap-2 sm:flex-row py-6 w-full shrink-0 items-center px-4 md:px-6 border-t border-gray-700 bg-gray-800"
    >
      <p class="text-xs text-gray-400">
        © 2024 Otako Land. Todos los derechos reservados.
      </p>
      <nav class="sm:ml-auto flex gap-4 sm:gap-6">
        <a
          class="text-xs text-gray-400 hover:text-purple-400 hover:underline underline-offset-4"
          href="/tos">Términos de Servicio</a
        >
        <a
          class="text-xs text-gray-400 hover:text-purple-400 hover:underline underline-offset-4"
          href="/privacy">Política de Privacidad</a
        >
      </nav>
    </footer>
  </body>
</html>

<style is:global>
  .link {
    color: #bc75ff;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
  }

  .link::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: #923ed6;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .link:hover {
    color: #a555ff;
  }

  .link:hover::after {
    transform: scaleX(1);
  }

  .text-5xl {
    line-height: 1.4rem;
  }
</style>
