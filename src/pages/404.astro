---
import PrettyButton from "@components/PrettyButton.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Otako Land - 404">
  <div
    class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center p-4"
  >
    <div class="text-center space-y-8">
      <h1
        class="text-9xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 animate-pulse"
      >
        404
      </h1>
      <div class="space-y-4">
        <h2 class="text-3xl font-bold text-gray-100">
          ¡Ups! Página no encontrada
        </h2>
        <p class="text-xl text-gray-300">Parece que te has perdido.</p>
        <PrettyButton href="/" text="Volver al inicio" />
      </div>
    </div>
  </div>
</Layout>
